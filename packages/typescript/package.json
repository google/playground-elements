{
  "name": "@playground-elements/internal-typescript",
  "version": "0.0.1",
  "description": "Custom ESM build for the TypeScript compiler",
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "upstream:init": "wireit",
    "upstream:install": "wireit",
    "upstream:generate": "wireit",
    "build": "wireit",
    "build:js": "wireit"
  },
  "wireit": {
    "upstream:init": {
      "command": "git submodule deinit --force upstream && git submodule update --init --depth=0 && cd upstream && git fetch origin $COMMIT && git checkout FETCH_HEAD",
      "env": {
        "COMMIT": "1d96eb489e559f4f61522edb3c8b5987bbe948af"
      },
      "files": [],
      "output": []
    },
    "upstream:install": {
      "command": "cd upstream && npm ci",
      "files": [],
      "output": [],
      "dependencies": [
        "upstream:init"
      ]
    },
    "upstream:generate": {
      "command": "cd upstream && npx hereby generate-diagnostics",
      "files": [],
      "output": [],
      "dependencies": [
        "upstream:install"
      ]
    },
    "build": {
      "dependencies": [
        "build:js"
      ]
    },
    "build:js": {
      "command": "find upstream/src/{compiler,services} -name \"*.ts\" -not -name \"*.d.ts\" | xargs esbuild --color --outdir=lib --outbase=upstream/src --format=esm --bundle --splitting",
      "files": [],
      "output": [
        "lib/**/*.js"
      ],
      "dependencies": [
        "upstream:generate"
      ]
    }
  }
}
